<thead>
  <tr>
    {{#if @enableSelection}}
      <th>{{!-- Checkbox --}}</th>
    {{/if}}
    {{#if @enableLineNumbers}}
      <th>{{!-- Linenumbers --}}</th>
    {{/if}}
    {{#if (has-block)}}
      {{yield}}
    {{else}}
      {{#each @data-table.parsedFields as |field|}}
        <ThSortable @field={{field}} @label={{field}} @currentSorting={{@data-table.sort}} @updateSort={{@updateSort}} />
      {{/each}}
    {{/if}}
  </tr>
</thead>