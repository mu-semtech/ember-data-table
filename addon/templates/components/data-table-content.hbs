{{! template-lint-disable no-curly-component-invocation table-groups }}
<table class="data-table {{this.tableClass}}">
  {{#if (has-block)}}
    {{yield (hash
        header=(component "data-table-content-header" enableSelection=this.enableSelection enableLineNumbers=this.enableLineNumbers data-table=this.data-table)
        body=(component "data-table-content-body" content=this.content enableSelection=this.enableSelection enableLineNumbers=this.enableLineNumbers noDataMessage=this.noDataMessage onClickRow=(optional this.onClickRow) data-table=this.data-table)
        )}}
  {{else}}
    {{data-table-content-header enableSelection=this.enableSelection enableLineNumbers=this.enableLineNumbers data-table=this.data-table}}
    {{data-table-content-body content=this.content enableSelection=this.enableSelection enableLineNumbers=this.enableLineNumbers noDataMessage=this.noDataMessage onClickRow=(optional this.onClickRow) data-table=this.data-table}}
  {{/if}}
</table>
